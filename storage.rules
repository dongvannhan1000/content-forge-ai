rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to user-images folder
    match /user-images/{userId}/{allPaths=**} {
      allow read: if true; // Public read access for image URLs
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload their own files to user-uploads folder
    match /user-uploads/{userId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Generated images from AI - public read, only Cloud Functions can write
    match /generated-images/{userId}/{allPaths=**} {
      allow read: if true; // Public read for CDN delivery
      allow write: if false; // Only Cloud Functions can write (via Admin SDK)
    }
  }
}
